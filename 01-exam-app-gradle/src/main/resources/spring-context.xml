<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="questionRepo" class="ru.revseev.otus.spring.quizapp.repo.CsvQuestionRepo">
        <constructor-arg name="csvSource" value="questions.csv"/>
        <constructor-arg name="questionParser" ref="questionParser"/>
    </bean>

    <bean id="questionParser" class="ru.revseev.otus.spring.quizapp.parser.SimpleQuestionParser"/>

    <bean id="questionService" class="ru.revseev.otus.spring.quizapp.service.QuestionServiceImpl">
        <constructor-arg name="questionRepo" ref="questionRepo"/>
    </bean>

</beans>
